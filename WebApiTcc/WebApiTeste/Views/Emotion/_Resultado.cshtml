@model IEnumerable<WebApiTcc.ViewModel.Emotion.EmotionViewModel>

<div class="col-md-12">
    <div class="col-md-6 text-center">
        <label>Imagem original</label>
        <img src="@ViewBag.File" height="500" width="500" />
    </div>
    <div class="col-md-6 text-center">
        <label>Imagem analisada</label>
        <canvas width="500" height="500" id="canvas1"></canvas>
    </div>
    <div class="col-md-12 text-center">
        <h2>Resultados</h2>
        <label class="col-md-2"></label>
        <div class="panel panel-default col-md-3" style="width: 700px; height: 700px">
            <canvas id="myChart" width="400" height="400"></canvas>
        </div>
    </div>
    <div class="col-md-12">
        <br/><br/>
        <div class="col-md-12" align="right">
            <a class="btn btn-primary" asp-action="Index">Voltar</a>
        </div>
    </div>
</div>
<script>
    var model = JSON.parse('@Html.Raw(Json.Serialize(Model))');

    var dataSets = [],
        corArray = ['rgb(240, 52, 52)', 'rgb(0, 230, 64)', 'rgb(78, 205, 196)', 'rgb(247, 202, 24)', 'rgb(102, 51, 153)', 'rgb(65, 131, 215)'];

    for (var i = 0; i < model.length; i++) {
        var item = model[i],
            cor = corArray[i];

        dataSets.push({
            label: "Face encontrada " + (i + 1),
            data: [item.scores.anger, item.scores.contempt, item.scores.disgust, item.scores.fear, item.scores.happiness, item.scores.neutral, item.scores.sadness, item.scores.surprise],
            backgroundColor: [
                cor,
                cor,
                cor,
                cor,
                cor,
                cor,
                cor,
                cor
            ],
            borderColor: [
                cor,
                cor,
                cor,
                cor,
                cor,
                cor,
                cor,
                cor
            ],
            borderWidth: 1
        });
    }

    var ctx = document.getElementById("myChart").getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ["Raiva", "Desprezo", "Desgosto", "Medo", "Felicidade", "Neutro", "Tristeza", "Surpresa"],
            datasets: dataSets
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero:true
                    }
                }]
            }
        }
    });
</script>