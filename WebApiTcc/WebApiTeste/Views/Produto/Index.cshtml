@using Data.Services.Categoria
@model IEnumerable<WebApiTcc.ViewModel.Produto.ProdutoViewModel>

@{ViewData["Title"] = "Produto";}

<h2>@ViewData["Title"]</h2>

<div class="form-group" align="right">
    <a asp-action="Create" class="btn btn-info">Add</a>
</div>

<div class="table table-responsive">
    <table class="table table-hover">
        @if (@Model != null)
        {
            <tr>
                <th>Produto</th>
                <th>Descricao</th>
                <th>Categoria</th>
                <th>Ativo</th>
                <th></th>
            </tr>

            foreach (var item in Model)
            {

                <tr>
                    <td class="col-md-2.5">@item.Nome</td>
                    <td class="col-md-2.5">@item.Descricao</td>
                    <td class="col-md-2.5">@item.IdCategoria</td>
                    <td class="col-md-2.5">@item.Ativo</td>
                    <td>
                        <a asp-action="Edit" class="btn btn-default" asp-route-id="@item.IdProduto">Editar</a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdProduto">Deletar</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>Nenhum Produto Cadastrado</tr>
        }


    </table>
</div>
