@model WebApiTcc.ViewModel.Produto.ProdutoViewModel
@{ViewData["Title"] = "Adicionar Produto";}
<h2>@ViewData["Title"]</h2>

<h4>Informe os dados do Produto</h4>
<hr />
<form asp-action="Post" class="form-horizontal">
    <div class="form-group">
        <label asp-for="Nome" class="col-md-2 control-label">Nome</label>
        <div class="col-md-10">
            <input asp-for="Nome" class="form-control">
            <span asp-validation-for="Nome" class="text-danger" />
        </div>
        <br>
        <label asp-for="Descricao" class="col-md-2 control-label">Descricao</label>
        <div class="col-md-10">
            <input asp-for="Descricao" class="form-control">
            <span asp-validation-for="Descricao" class="text-danger" />
        </div>
        <br>
        <label asp-for="IdCategoria" class="col-md-2 control-label">Categoria</label>
        <div class="col-md-10">
            <select class="form-control" asp-for="IdCategoria" asp-items="@(new SelectList(Model.Categoria,"IdCategoria","Nome"))">
                <option>Selecione</option>
            </select>
        </div>
        <br>
        <label asp-for="Ativo" class="col-md-2 control-label">Ativo</label>
        <div class="radio col-md-10">
            <label><input asp-for="Ativo" value="true" type="radio" checked>Sim</label>
            <label><input asp-for="Ativo" value="false" type="radio">Não</label>
        </div>
    </div>
    <div align="right" class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Adicionar" class="btn btn-success">
            <a class="btn btn-default" asp-action="Index">Voltar</a>
        </div>
    </div>
</form>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}