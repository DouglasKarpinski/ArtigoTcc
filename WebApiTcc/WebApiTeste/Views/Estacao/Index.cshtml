@using Data.Services.Categoria
@model IEnumerable<WebApiTcc.ViewModel.Estacao.EstacaoViewModel>

@{ViewData["Title"] = "Estação";}

<h2>@ViewData["Title"]</h2>

<div class="form-group" align="right">
    <a asp-action="Create" class="btn btn-info">Add</a>
</div>

<div class="table table-responsive">
    <table class="table table-hover">
        @if (Model.Count() != 0)
        {
            <tr>
                <th>Categoria</th>
                <th>Descricao</th>
                <th>Unidade de Negócio</th>
                <th>Ativo</th>
                <th></th>
            </tr>
            foreach (var item in Model)
            {

                <tr>
                    <td class="col-md-2.5">@item.Nome</td>
                    <td class="col-md-2.5">@item.Descricao</td>
                    <td class="col-md-2.5">@item.NomeProduto</td>
                    <td class="col-md-2.5">@item.Ativo</td>
                    <td>
                        <a asp-action="Edit" class="btn btn-default" asp-route-id="@item.IdEstacao">Editar</a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdEstacao">Deletar</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>Nenhum estação cadastrada</tr>
        }

    </table>
</div>

