@model Noticias.Models.ViewModels.CategoriaViewModel
@{ViewData["Title"] = "Editar Categoria";}
<h2>@ViewData["Title"]</h2>

<h4>Informe os dados da Categoria</h4>
<hr/>
<form asp-action="Edit" class="form-horizontal">
    <div class="form-group">
        <label asp-for="Descricao" class="col-md-2 control-label">Categoria</label>
        <div class="col-md-10">
            <input asp-for="Descricao" class="form-control">
            <span asp-validation-for="Descricao" class="text-danger" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Editar" class="btn btn-success">
            <a class="btn btn-default" asp-action="Index">Voltar</a>
        </div>
    </div>
</form>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}